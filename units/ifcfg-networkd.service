[Unit]
Description=Configure network via networkd from Kernel Command Line
Documentation=man:ifcfg-networkd(8)
After=local-fs.target
Before= systemd-networkd.service sshd.service getty.target

[Service]
Type=oneshot
RemainAfterExit=yes
ExecStart=/usr/bin/ifcfg-networkd

[Install]
WantedBy=multi-user.target
